{
  "name": "payment-service",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "bun run tsc --noEmit --watch",
    "lint": "eslint ./src --ext .ts --fix",
    "dev": "bun --watch src/main.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./build/server ./src/main.ts",
    "proto:gen": "grpc_tools_node_protoc  --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto  --ts_proto_out=./src/infrastructure/grpc/generated  --ts_proto_opt=outputServices=grpc-js  --proto_path=./src/proto  ./src/proto/payment.proto"
  },
  "dependencies": {
    "@eduflux-v2/shared": "workspace:*",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "elysia": "latest",
    "http-status": "^2.1.0",
    "inversify": "^7.0.0-alpha.5",
    "jose": "^6.1.0",
    "mongoose": "^8.15.1",
    "reflect-metadata": "^0.2.2",
    "stripe": "^18.3.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^4.0.5",
    "amqplib": "^0.10.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "globals": "^16.2.0",
    "grpc-tools": "^1.13.0",
    "@types/amqplib": "^0.10.8",
    "@types/google-protobuf": "^3.15.12",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "typescript-eslint": "^8.32.1",
    "bun-types": "latest",
    "ts-proto": "^2.7.3",
    "typescript": "^5.8.3",
    "tsx": "^4.20.3"
  },
  "module": "src/index.js"
}
